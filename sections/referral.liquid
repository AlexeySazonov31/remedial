{% schema %}
{
  "name": "Referral Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Заголовок",
      "default": "Программа реферальных ссылок"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Размер шрифта заголовка (px)",
      "default": 24,
      "min": 12,
      "max": 72,
      "step": 1
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Цвет заголовка",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Выравнивание заголовка",
      "default": "left",
      "options": [
        { "value": "left", "label": "Слева" },
        { "value": "center", "label": "По центру" },
        { "value": "right", "label": "Справа" }
      ]
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Описание",
      "default": "Пригласите друзей и получите бонусы!"
    },
    {
      "type": "range",
      "id": "description_font_size",
      "label": "Размер шрифта описания (px)",
      "default": 16,
      "min": 12,
      "max": 72,
      "step": 1
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Цвет описания",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "description_alignment",
      "label": "Выравнивание описания",
      "default": "left",
      "options": [
        { "value": "left", "label": "Слева" },
        { "value": "center", "label": "По центру" },
        { "value": "right", "label": "Справа" }
      ]
    }
  ]
}
{% endschema %}

<section>
  <div class="referral-section">
    <h2
      style="
        font-family: {{ section.settings.heading_font }};
        font-size: {{ section.settings.heading_font_size }}px;
        color: {{ section.settings.heading_color }};
        text-align: {{ section.settings.heading_alignment }};
      "
    >
      {{ section.settings.heading }}
    </h2>
    <p
      style="
        font-family: {{ section.settings.description_font }};
        font-size: {{ section.settings.description_font_size }}px;
        color: {{ section.settings.description_color }};
        text-align: {{ section.settings.description_alignment }};
      "
    >
      {{ section.settings.description }}
    </p>
  </div>
</section>
