{% schema %}
{
  "name": "Referral Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Заголовок",
      "default": "Программа реферальных ссылок"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Описание",
      "default": "Пригласите друзей и получите бонусы!"
    }
  ]
}
{% endschema %}

<section>
  <div class="referral-section">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.description }}</p>
  </div>
</section>
