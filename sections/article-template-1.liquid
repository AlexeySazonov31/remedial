  "name": "Article content",
  "settings": [
    {
      "type": "checkbox",
      "id": "social_sharing_blog",
      "label": "Enable blog post sharing",
      "default": true
    },
    {
      "type": "text",
      "id": "same_blog",
      "label": "In same blog",
      "default": "In same category"
    },
    {
      "type": "text",
      "id": "related_blog",
      "label": "In same tag",
